        int mynumber(int size, int[] num) {
    	
    	Scanner in = new Scanner (System.in);
    	System.out.println("Enter marks ");
    	int max = in.nextInt();
    	
		
	
        
        for (int i=0; i<size; i++) {
        	
        //	Scanner in = new Scanner(System.in);
        	System.out.println("Enter marks: ");
             num[i] = in.nextInt();
         //   int max =0;
            
            if(num[i] >max)
            	max = num[i];
            
}

            	
            	return max;
        	
        	
	
